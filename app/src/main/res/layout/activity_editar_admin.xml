<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/etNombre"
        android:hint="Nombre" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/etApellido"
        android:hint="Apellido" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/etCorreo"
        android:hint="Correo" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/etContraseña"
        android:hint="Contraseña" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnGuardar"
        android:text="Guardar cambios" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
